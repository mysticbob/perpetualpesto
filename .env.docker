# Docker Environment Configuration
# Copy this to .env and fill in your values

# ============================================
# Database Configuration (Internal Network)
# ============================================
POSTGRES_DB=recipe_planner
POSTGRES_USER=recipe_user
# Generate with: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================
# Redis Configuration (Internal Network)
# ============================================
# Generate with: openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ============================================
# Application Configuration
# ============================================
# Port to expose (only on localhost)
PORT=3000

# Session secret - Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_STRONG_SESSION_SECRET_HERE

# CORS origin (for local development)
CORS_ORIGIN=http://localhost:3000

# Log level
LOG_LEVEL=info

# ============================================
# Firebase Configuration (Required)
# ============================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here

# ============================================
# OpenAI Configuration (Required for AI features)
# ============================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORG_ID=org-your_org_id_here_optional

# AI Model Configuration
AI_MODEL_CHAT=gpt-4-turbo-preview
AI_MODEL_VISION=gpt-4-vision-preview
AI_MODEL_EMBEDDING=text-embedding-3-small

# AI Rate Limiting (requests per hour)
AI_CHAT_RATE_LIMIT=100
AI_VISION_RATE_LIMIT=50
AI_CHAT_TOKEN_LIMIT=50000
AI_VISION_TOKEN_LIMIT=100000

# AI Feature Flags
AI_FEATURES_ENABLED=true
AI_CACHE_ENABLED=true
AI_CACHE_TTL=300
AI_RETRY_ENABLED=true
AI_LOGGING_ENABLED=true