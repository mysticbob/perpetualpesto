# Recipe Planner Kubernetes Environment Variables
# Copy this file to .env.k8s and fill in your actual values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=recipe_planner
POSTGRES_USER=recipe_user

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Security Keys
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Domain Configuration (for ingress)
DOMAIN_NAME=your-domain.com

# Optional: Image registry
DOCKER_REGISTRY=your-registry.com/your-username
IMAGE_TAG=latest