# Recipe Planner Google Cloud Run Environment Variables
# Copy this file to .env.cloudrun and fill in your actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
REGION=us-central1

# Database Configuration (Cloud SQL)
DATABASE_URL=postgresql://recipe_user:your-password@your-instance-ip:5432/recipe_planner

# Firebase Configuration
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Security Keys
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Optional: Custom domain
CUSTOM_DOMAIN=your-domain.com