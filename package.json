{
  "name": "recipe-planner",
  "version": "1.0.0",
  "description": "Recipe extraction and meal planning app",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run dev:db\" \"bun run wait-for-db && bun run dev:server\" \"bun run dev:client\"",
    "dev:client": "vite",
    "dev:server": "bun run server/index.ts",
    "dev:db": "docker-compose up -d",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "bun run server/index.ts",
    "server": "bun run server/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d && bun run wait-for-db && bun run db:push",
    "db:optimize": "bun run scripts/optimize-db.ts",
    "db:apply-optimizations": "bun run scripts/apply-db-optimizations.ts",
    "setup": "bun install && bun run db:up && bun run scripts/wait-for-db.ts && bun run db:push && bun run db:generate",
    "setup:fresh": "bun run db:reset && bun run db:push && bun run db:generate && bun run db:optimize",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:performance": "bun run scripts/performance-test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "wait-for-db": "bun run scripts/wait-for-db.ts",
    "mcp:start": "bun run server/mcp/index.ts",
    "mcp:dev": "bun --watch server/mcp/index.ts",
    "start:all": "bash scripts/start-all.sh",
    "system:check": "bun run scripts/check-system.ts",
    "system:status": "bun run scripts/check-system.ts",
    "seed:ingredients": "bun run scripts/seed-ingredients.ts",
    "seed:test-data": "bun run scripts/seed-test-data.ts",
    "seed:all": "bun run seed:ingredients && bun run seed:test-data",
    "db:stats": "bun run scripts/check-db-stats.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hono/node-server": "^1.5.0",
    "@prisma/client": "^5.7.1",
    "@stripe/react-stripe-js": "^3.9.1",
    "@stripe/stripe-js": "^7.8.0",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "@types/react-beautiful-dnd": "^13.1.8",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "compressorjs": "^1.2.1",
    "concurrently": "^8.2.2",
    "convert": "^5.12.0",
    "culinary-unit-abbreviation": "^1.1.0",
    "date-fns": "^4.1.0",
    "firebase": "^10.7.1",
    "fraction.js": "^5.2.2",
    "framer-motion": "^10.16.4",
    "hono": "^3.11.7",
    "openai": "^5.15.0",
    "prisma": "^5.7.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.20.1",
    "react-webcam": "^7.2.0",
    "recharts": "^3.1.2",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/bun": "^1.2.20",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.1"
  }
}
